{
  "name": "visortest_api",
  "version": "0.1.0",
  "private": true,
  "description": "Server application for the Visor.ai test chatbot",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf build/*",
    "tsc": "tsc",
    "copy-assets": "ts-node scripts/copy_assets",
    "build": "npm-run-all clean lint tsc copy-assets",
    "serve": "node ./build/server.js",
    "start": "npm-run-all build serve",
    "dev": "nodemon",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prettier": "prettier --config .prettierrc --check .",
    "prettier:fix": "prettier --config .prettierrc --write ."
  },
  "author": "Isaac Boucinha",
  "license": "ISC",
  "dependencies": {
    "cookie-parser": "~1.4.4",
    "cors": "^2.8.5",
    "debug": "~2.6.9",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "http-errors": "~1.6.3",
    "jade": "^0.29.0",
    "mongodb": "^5.3.0",
    "morgan": "~1.9.1"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.3",
    "@types/debug": "^4.1.7",
    "@types/express": "^4.17.17",
    "@types/fs-extra": "^11.0.1",
    "@types/http-errors": "^2.0.1",
    "@types/morgan": "^1.9.4",
    "@types/node": "^18.16.3",
    "@types/shelljs": "^0.8.12",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "eslint": "^8.39.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-standard-with-typescript": "^34.0.1",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.7.0",
    "eslint-plugin-promise": "^6.1.1",
    "fs-extra": "^11.1.1",
    "nodemon": "^2.0.22",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.8",
    "rimraf": "^5.0.0",
    "shelljs": "^0.8.5",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  }
}
